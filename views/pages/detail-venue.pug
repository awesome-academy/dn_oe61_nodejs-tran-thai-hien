extends ../layouts/layout.pug
block content
    #loading-overlay(
        style="display:none;position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(255,255,255,0.7);z-index:9999;display:flex;justify-content:center;align-items:center;"
    )
        .spinner-border.text-primary(role="status")
            span.visually-hidden Loading...
    .container.d.flex.justify-content-center
        .hero-section
            .hero-content
                h1.display-4#building-title Loading...
                p.lead#building-subtitle Loading address...
    .container.py-5
      .row
        .col-lg-8
          // Basic Info
          .card.mb-4
            .card-body
              .d-flex.justify-content-between.align-items-center.mb-3
                h2.card-title Building Information
                span.status-badge#building-status Loading...
              p.card-text#building-description Loading description...
              .row.mt-4
                .col-md-6
                  p 
                    i.fas.fa-map-marker-alt.text-primary.me-2
                    strong Address: 
                    |  
                    span#building-address
                  p
                    i.fas.fa-calendar-check.text-primary.me-2
                    strong Created: 
                    |  
                    span#building-created
                .col-md-6
                  p
                    i.fas.fa-user-tie.text-primary.me-2
                    strong Owner: 
                    |  
                    span#owner-name
                  p
                    i.fas.fa-envelope.text-primary.me-2
                    strong Email: 
                    |  
                    span#owner-email
          // Amenities
          .card.mb-4
            .card-body
              h2.card-title.section-title Amenities
              .amenities-container
                small.text-muted Loading amenities...
          // Spaces
          .card.mb-4
            .card-body
              h2.card-title.section-title Available Spaces
              .row#spaces-row
                .col
                  small.text-muted Loading spaces...
        .col-lg-4
          // Owner Info
          .owner-info.mb-4
            h3.section-title Building Owner
            .d-flex.align-items-center.mb-3
              .me-3
                img(src="/images/default-avatar.png" alt="Owner Avatar" class="rounded-circle" style="width: 70px; height: 70px;")
              div
                h5.mb-0#owner-name-sidebar Loading...
                small.text-muted Owner
            ul.list-unstyled
              li.mb-2
                i.fas.fa-envelope.text-primary.me-2
                span#owner-email-sidebar Loading email...
              li.mb-2
                i.fas.fa-phone.text-primary.me-2
                span#owner-phone-sidebar
              li
                i.fas.fa-building.text-primary.me-2
                span#owner-building-sidebar
            button.btn.btn-primary.w-100.mt-2 Contact Owner

          // Map
          .card.mb-4
            .card-body
              h3.card-title.section-title Location
              .map-container
                #map(style="height: 300px; width: 100%;")
              .mt-3
                p
                  small#lat-lng Loading location...
                button.btn.btn-outline-primary.btn-sm.w-100 Get Directions

          // Quick Actions
          .card
            .card-body
              h3.card-title.section-title Quick Actions
              button.btn.btn-outline-primary.mb-2.w-100
                i.fas.fa-calendar-plus.me-2
                | Book Space
              button.btn.btn-outline-secondary.mb-2.w-100
                i.fas.fa-share-alt.me-2
                | Share
              button.btn.btn-outline-success.w-100
                i.fas.fa-heart.me-2
                | Add to Favorites
    // Bootstrap JS
    script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDR4vLzAat7cZE7J9RvEE13wp1SawFDiZ4&callback=initMap")
    script(src="/vendor/toastify/toastify.js")
    script(src="/js/detail-venue.js")
