doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 403 - Forbidden
    style.
      body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: #f8f9fa;
        color: #343a40;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
        text-align: center;
        padding: 0 20px;
      }
      h1 {
        font-size: 10rem;
        margin: 0;
        font-weight: 700;
        color: #dc3545;
      }
      h2 {
        font-size: 2.5rem;
        margin: 0.5rem 0 1rem 0;
      }
      p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        color: #6c757d;
      }
      a.btn-home {
        display: inline-block;
        padding: 0.75rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        color: #fff;
        background-color: #dc3545;
        border-radius: 0.375rem;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.4);
        transition: background-color 0.3s ease;
      }
      a.btn-home:hover {
        background-color: #a71d2a;
      }
      .icon {
        font-size: 6rem;
        margin-bottom: 1rem;
        color: #ffc107;
      }
  body
    div
      h1 403
      h2 Access Denied
      p You do not have permission to view this page.
      a.btn-home(href='/') Go Back Home
