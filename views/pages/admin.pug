extends ../layout.pug

block content
  h1.fw-bold.text-primary.mb-4 Dashboard
  div.row.g-4
    each card in [
      {title: 'Users', value: '1,250', icon: 'fas fa-users', color: 'primary'},
      {title: 'Sales', value: '$12,400', icon: 'fas fa-dollar-sign', color: 'success'},
      {title: 'Orders', value: '320', icon: 'fas fa-shopping-cart', color: 'warning'}
    ]
      div.col-12.col-md-6.col-lg-4
        div.card.shadow-sm.border-0
          div.card-body.d-flex.align-items-center
            div.me-3
              i(class=`${card.icon} text-${card.color} fs-1`)
            div
              h5.mb-1 #{card.title}
              p.fs-4.fw-bold #{card.value}
  hr.my-4
  h4.mb-3 Recent Activity
  ul.list-group.shadow-sm
    li.list-group-item.d-flex.justify-content-between.align-items-center
      span New user registered
      small.text-muted 2 mins ago
    li.list-group-item.d-flex.justify-content-between.align-items-center
      span Order #1234 completed
      small.text-muted 10 mins ago
    li.list-group-item.d-flex.justify-content-between.align-items-center
      span Payment of $500 received
      small.text-muted 1 hour ago
